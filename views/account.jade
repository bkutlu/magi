  script(type='text/javascript').
    $(document).ready(function() {
      var annos = !{JSON.stringify(geneAnnos)};
        $('#gene-annotation-table').find('tr').each(function(index) {
        var trow = $(this);
        if (index === 0) {
          trow.prepend('<th>Gene</th>');
          trow.append('<th>Delete</th>');
        } else {
          trow.prepend('<td>' + annos[index - 1].gene + '</td>');
          trow.append('<td><a data-uid=' + annos[index - 1].u_id + ' class="trash-mut-icon" title="Remove mutation"><span class="glyphicon glyphicon-trash"></a></td>');
        }
      });
      $(".trash-mut-icon").click(deleteAnnotation);

      annos = !{JSON.stringify(sourceAnnos)};
      $('#source-annotation-table').find('tr').each(function(index) {
        var trow = $(this);
        if (index === 0) {
          trow.prepend('<th>Gene</th>');
          trow.append('<th>Delete</th>');
        } else {
          trow.prepend('<td>' + annos[index - 1].gene + '</td>');
          trow.append('<td><a data-uid=' + annos[index - 1].sourceAnnos[0].asa_u_id +
                    ' data-aber-id='+ annos[index - 1].u_id +
                    ' class="trash-source-icon" title="Remove mutation"><span class="glyphicon glyphicon-trash"></a></td>');
        }

      });
      $('#source-annotation-table span.source-vote-count').hide();
      $('.agree-column').hide();
      $(".trash-source-icon").click(deleteAnnotation);
    });
