extends ../layout
block body
	div(class="container", id="gene-annotations")
		br
		h3 #{gene} mutation annotations
		br
		table(class="table table-condensed table-hover", id="gene-annotation-table", style="max-width:600px")
			thead
				tr(style="background:#e3e3e3")
					th PMIDs
					th Cancers
			tbody
				-for (var i = 0; i < geneTable.length; i++)
					-var d = geneTable[i];
						tr
							td 
								!=d.pmids.map(function(pmid){ return '<a href="http://www.ncbi.nlm.nih.gov/pubmed/' + pmid + '" target="_new">' + pmid + '</a>'}).join(", ")
							td #{d.cancers.join(", ")}
